	border-bottom: none;
}
.BoxHeight {
	width: 100%;
	height: 50px;
	background: #ffffff;
}
.TextBoxRight {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100rpx;
	height: 50rpx;
	margin-right: 20rpx;
