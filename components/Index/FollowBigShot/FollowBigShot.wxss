.FollowBigShot {
	height: 634rpx;
	width: 100%;
	background: #ffffff;
	box-sizing: border-box;	
}
.FollowBigShotTitle {
		height: 70rpx;
		width: 100%;
		display: flex;
		align-items: center;
		box-sizing: border-box;
		border-bottom: 1rpx solid #ebebeb;
		position: relative;
	}
.TradeUsername,
.TradeAccountMumber {
			font-size: 28rpx;
			font-weight: 500;
			color: rgba(51, 51, 51, 1);
		}
.TradeAccountMumber {
			margin-left: 14rpx;
		}
.TradeLevel {
			width: 66rpx;
			height: 32rpx;
			text-align: center;
			line-height: 32rpx;
			background: rgba(252, 161, 40, 1);
			border-radius: 16rpx;
			font-size: 20rpx;
			font-weight: 400;
			padding: 2rpx;
			color: rgba(255, 255, 255, 1);
			margin-left: 14rpx;
		}
.yields2value {
			font-size: 28rpx;
			font-weight: 500;
			color: rgba(51, 51, 51, 1);
			position: absolute;
			right: 20rpx;
		}
.ThreeteenMaximum,
.yields2,
.tradCycle {
			font-size: 24rpx;
			font-weight: 400;
			color: rgba(153, 153, 153, 1);
		}
.yields2 {
			position: absolute;
			right: 20rpx;
		}
.pricemonth {
			font-size: 24rpx;
			font-weight: 500;
			color: rgba(53, 152, 165, 1);
		}
.TextBox {
			display: flex;
			flex: 1;
			align-items: center;
			position: relative;
					
		}
.FollowBigShotContentLineRight {
				height: 110rpx;
			}
.FollowBigShotContentLineRight {
				display: flex;
				flex-flow: column;
				flex: 1;		
			}
.FollowBigShotContentLineRightBox {
			display: flex;
			flex: 1;
			align-items: center;
		}
.FollowBigShotHeadingImg {
				width: 80rpx;
				height: 80rpx;
			}
.FollowBigShotContentLineLeft {
			width: 80rpx;
			height: 100%;
			display: flex;
			align-items: center;
			margin-right: 24rpx;
		}
.FollowBigShotContentLine {
		height: 141rpx;
		margin-left: 21rpx;
		border-bottom: 1rpx solid #ebebeb;
		display: flex;	
	}
.FollowBigShotText {
			font-size: 32rpx;
			font-weight: 500;
			color: rgba(51, 51, 51, 1);
			float: left;
			margin-left: 21rpx;
		}
.ImgMore {
			width: 16rpx;
			height: 30rpx;
			position: absolute;
			right: 21rpx;
		}