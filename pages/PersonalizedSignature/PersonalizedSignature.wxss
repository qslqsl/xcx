page{
  background-color: rgb(240, 240, 240);
}
.Box{
	position: relative;
	width:100%;
	height:160rpx;
}
.TextareaBox{
	margin-top: 10rpx;
	width:100%;
	height:160rpx;
	padding: 14rpx 0 0 20rpx;
	box-sizing: border-box;
	background:rgba(255,255,255,1);
	font-size:28rpx !important;
	color:#333333;
}
.Box text{
	font-size:24rpx;
	font-weight:400;
	color:rgba(153,153,153,1);
	position: absolute;
	right:20rpx;
	bottom:14rpx;
}
.success{
  width: 360rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin: auto;
  margin-top: 40rpx;
  background: rgb(53,152,165);
}
.success text{
  font-size: 28rpx;
  color: #ffffff;
}