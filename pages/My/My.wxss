.show{
  display: block;
}
.hide{
  display: none;
}
page{
  background-color: rgb(240, 240, 240);
  margin-bottom: 102rpx;
}
.MyTopBar{
  height: 100%;
  width: 100%;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.MyTopBarCon text{
  color: rgb(51,51,51);
}


.avatar{
  width: 100%;
  height: 160rpx;
  background-color:#ffffff;
  text-align: center;
  position:relative;
}
.userbox{
  padding-top: 10rpx;
}
.moreInfo{
  font-size: 28rpx;
}
.GetUserInfoButton{
  margin-top: 14rpx;
  color: #ffffff;
  background-color: rgb(53, 152, 165);
  border-radius: 24rpx;
}

.position{
  position: relative;
}
.UserImage{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  left: 20rpx;
  top: 40rpx;
}
.Username{
  font-size: 30rpx;
  position: absolute;
  left: 140rpx;
  top: 50rpx;
}
.OtherInfo{
  position: absolute;
  left: 120rpx;
  top: 90rpx;
}
.Fans{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: rgb(153, 153, 153);
}
.Fans-num{
  font-size: 24rpx;
  margin-left: 10rpx;
}
.OtherInfoBox{
  display: inline-block;
}

.content{
  width: 100%;
	margin-top: 10rpx;
  background-color: #ffffff;
}
.content-one{
  width: 100%;
	height: 110rpx;
	line-height: 110rpx;
	display: -webkit-flex;
	display: flex;
	align-items: center;
}
.ImgLeft{
	width:54rpx;
	height: 54rpx;
	margin:0 15rpx 0 20rpx;
}
.one-right{
  display: -webkit-flex; 
	display: flex;
	flex: 1;
	align-items: center;
	height: 110rpx;
	line-height: 110rpx;
	box-sizing: border-box;
	border-bottom: 1rpx solid #EBEBEB;
	font-size:28rpx;
	font-weight:400;
	color:rgba(51,51,51,1);
}
.img_more{
	width: 15rpx;
	height: 28rpx;
	position: absolute;
	right:21rpx;
}

.content .content-one:last-child>.one-right{
  border-bottom: none;
}
 