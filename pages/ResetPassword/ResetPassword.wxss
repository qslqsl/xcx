.color{
  color: rgb(153,153,153);
}
.textBox{
	width: 100%;
	height: 54rpx;
	line-height: 54rpx;
	font-size:24rpx;
	font-weight:400;
  background-color: rgb(240, 240, 240);
	color:rgba(153,153,153,1);
	padding-left: 20rpx;
	box-sizing: border-box;
}
.textBox text:last-child{
	margin-left: 5px;
}
.GetVerificationCode{
  width:710rpx;
	height:80rpx;
	border-radius:6rpx;
	border:1px solid rgba(235,235,235,1);
	z-index: 10;
  margin: 40rpx 20rpx 0 20rpx;
  display: flex;
}
.Code{
  width:580rpx;
	height:80rpx;
	border-radius:6rpx;
	padding-left: 25rpx;
	box-sizing: border-box;
	color: #333333;
	font-size:28rpx;
	float: left;
  flex: 2.2;
}
.VerificationCode{
  flex: 1;
  display: flex;
  align-items: center;
  font-size:26rpx;
  color: rgb(53,152,165);
  margin-right: 20rpx;
}
.VerificationCode text:nth-of-type(1){
  font-size: 36rpx;
  text-align: center;
}
.VerificationCode text:nth-of-type(2){
  margin-left: 10rpx;
}

